@model IEnumerable<EmailMVCApplication.Models.NewEmail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row no-gutters m-3">
    <div class="card col-2m-12 col-md-10 col-lg-7 mx-auto shadow">
        <div class="card-header text-center">
            <h2>Hello, Admin</h2>
        </div>
        <div class="card-body">
            <p>
                @Html.ActionLink("Compose New", "Create", "NewEmail") | @Html.ActionLink("Return to Home Page", "Index", "Home")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Sender)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Recipient)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Subject)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Body)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SentDateTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.SentStatus)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Sender)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Recipient)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Subject)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Body)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SentDateTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SentStatus)
                        </td>
                        <td>
                            @Html.ActionLink("Details", "Details", "NewEmail", new { id = item.Id }, null) |
                            @Html.ActionLink("Delete", "Delete", "NewEmail", new { id = item.Id }, null)
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</div>