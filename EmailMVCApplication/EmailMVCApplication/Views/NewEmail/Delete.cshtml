@model EmailMVCApplication.Models.NewEmail

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row no-gutters m-3">
    <div class="card col-2m-12 col-md-10 col-lg-7 mx-auto shadow">
        <div class="card-header text-center">
            <h2>Delete Record - Are you sure?</h2>
        </div>
        <div class="card-body">
            <div>
                <h4>Sent Email</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        @Html.DisplayNameFor(model => model.Sender)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Sender)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Recipient)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Recipient)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Subject)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Subject)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.Body)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Body)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.SentDateTime)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SentDateTime)
                    </dd>

                    <dt>
                        @Html.DisplayNameFor(model => model.SentStatus)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.SentStatus)
                    </dd>

                </dl>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="form-actions no-color">
                        <input type="submit" value="Delete" class="btn btn-primary" /> |
                        @Html.ActionLink("Back to Sent Emails", "Index", "Admin")
                    </div>
                }
            </div>
        </div>
    </div>
</div>